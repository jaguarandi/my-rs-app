<div class="main posts-index">
  <div class="container post-container">
    <h1 class="posts-heading">投稿一覧</h1>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="row">
          <div class="post-left col-3">
            <img src="<%= "/user_images/#{post.user.image_name}" %>">
          </div>
          <div class="post-right col-9">
            <div class="post-user-name text-left">
              <%= link_to(post.user.name, "/users/#{post.user.id}", class: "link-user-name") %>
            </div>
            <div class="post-user-content text-left">
              <%= link_to(post.content, "/posts/#{post.id}", class: "link-user-content") %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
